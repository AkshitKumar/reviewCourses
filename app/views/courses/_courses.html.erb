<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Prof</th>
      <th>Credits</th>
      <% if admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.number %></td>
        <td><%= course.prof %></td>
        <td><%= course.credits %></td>
        <% if admin? %>
          <td><%= link_to 'Edit', edit_course_path(course) , class: "btn btn-link tdnew" %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-link tdnew" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @courses, inner_window: 1, outer_window: 0, renderer: BootstrapPagination::Rails %>