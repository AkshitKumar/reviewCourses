<div class="row">
	<div class="col-md-3">
		<h2>
  		<%= @course.name %>
		</h2>

		<p>
 		<strong>Rating:</strong>
  		<% if @avg_ratings < 1 %>
 		Not yet rated!
 		<% else %>
  		<span class="stars1"><%= @avg_ratings %></span>
  		<% end %>
		</p>

		<p> <%= "#{@reviews.length} reviews"%> </p>
		<p>
 		<strong>Number:</strong>
  		<%= @course.number %>
		</p>

		<p>
  		<strong>Prof:</strong>
  		<%= @course.prof %>
		</p>

		<p>
  		<strong>Credits:</strong>
  		<%= @course.credits %>
		</p>

		<%= link_to "Write a Review", new_course_review_path(@course) , class: "btn btn-primary" %>
	</div>

	<div class="col-md-9">
		<% if @reviews.blank? %>
			<h3> No reviews yet. Be first one to write one </h3>
		<% else %>
		<table class="table">
			<thead>
				<tr>
					<th class="col-md-3"></th>
					<th class="col-md-9"></th>
				</tr>
			</thead>
			<tbody>
				<%= render 'reviews' %>	
			</tbody>
		</table>
		<% end %>
	</div>
</div>
<% if current_user.admin? %>
<%= link_to 'Edit Course', edit_course_path(@course) , class: "btn btn-link" %> |
<%end%>
<%= link_to 'Back', courses_path ,class: "btn btn-link"%>
