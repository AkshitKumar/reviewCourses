<div class="row">
	<div class="col-md-3">
		<h2>
  		<%= @course.name %>
		</h2>

		<p>
 		<strong>Number:</strong>
  		<%= @course.number %>
		</p>

		<p>
  		<strong>Prof:</strong>
  		<%= @course.prof %>
		</p>

		<p>
  		<strong>Credits:</strong>
  		<%= @course.credits %>
		</p>

		<%= link_to "Write a Review", new_course_review_path(@course) , class: "btn btn-primary" %>
	</div>

	<div class="col-md-9">
		<% if @reviews.blank? %>
			<h3> No reviews yet. Be first one to write one </h3>
		<% else %>
			<% @reviews.each do |review| %>
				<p> <%= review.rating %> </p>
				<p> <%= review.comment %> </p>
			<% end %>
		<% end %>
	</div>
</div>

<%= link_to 'Edit', edit_course_path(@course) , class: "btn btn-link" %> |
<%= link_to 'Back', courses_path ,class: "btn btn-link"%>
