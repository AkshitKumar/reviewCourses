<% @depts = Dept.all %>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <% unless logged_in? && current_user.follow.blank? %>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <% end %>
        <h4 class="modal-title">Follow few Departments</h4>
      </div>
      <div class="modal-body">
        <%= form_for(:follow, :url => users_path, :method => :post) do |f| %>
        <% @check = current_user.follow %>
				<% if !@check.nil? %>
        <% @check = @check.split(",") %>
        <% end %>
        <% i = 0 %>
        <div class="col-md-6">
        <% for dept in @depts %>
        <% if i == (@depts.count)/2+1 %>
        </div>
        <div class="col-md-6">
        <% end %>
      <li class="side-list">
        <% if !@check.nil? %>
  <%=check_box_tag   "follow[#{dept.id}]" ,dept.id,@check.include?(dept.id.to_s) %>
    <% else %>
  <%=check_box_tag   "follow[#{dept.id}]" ,dept.id %> 
  <% end %>
        <%= h dept.label %>
        <% i+=1 %>
      </li>
      <% end %>
    </div>
        <div class="form-group">
        <%= f.submit "Save",class: "btn btn-primary"%>
        </div>
        <% end %>
      </div>
      
    </div>

  </div>
</div>
<% if logged_in? && !current_user.follow? %>
<script type="text/javascript">
jQuery(document).ready(function($){
    $("#myModal").modal({
      keyboard: false,
      backdrop: 'static'
    });
});
</script>
<% end %>
