<%= form_for([@course, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="jumbotron instruct">
    <button type="button" class="close" id="closeInstruct" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3>Instructions for writing reviews</h3> <br/>
  <ul> 
    <li> The review should help the reader understand about the course. </li>
    <li> The review should not express any kind of hatred towards the course or any person involved with it. </li>
    <li> Please follow the guidelines to write the review in sections as provided in the form below. </li>
    <li> The review will be monitored after being posted and may be removed if it does not follow proper conduct as mentioned above. </li>
  </ul>
</div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <%= f.hidden_field(:rating, :value => @review.rating) %>
    <div class="rating">
    <span id="5" class="glyphicon glyphicon-star"></span>
    <span id="4" class="glyphicon glyphicon-star"></span>
    <span id="3" class="glyphicon glyphicon-star"></span>
    <span id="2" class="glyphicon glyphicon-star"></span>
    <span id="1" class="glyphicon glyphicon-star"></span>
    </div>
  </div>
  <br><br>
  <div class="form-group">
    <%= f.label "Grading system" %>
    <%= f.text_area :grading , class: "form-control"%>
  </div>

   <div class="form-group">
    <%= f.label "What did you learn from this course?" %>
    <%= f.text_area :learning  , class: "form-control"%>
  </div>

   <div class="form-group">
    <%= f.label "How to go about the course with references?" %>
    <%= f.text_area :apply  , class: "form-control"%>
  </div>

   <div class="form-group">
    <%= f.label "Pre-requisites for the course" %>
    <%= f.text_area :prerequisites  , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label "How will this course be useful for your career?" %>
    <%= f.text_area :usefulforcareer  , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
